div ::-webkit-scrollbar {
    width: 8px;
    height: 10px;
}

div ::-webkit-scrollbar-track {
    background: transparent;
    border-radius: 4px;
}

div ::-webkit-scrollbar-thumb {
    background: #5C6173;
    border-radius: 4px;
}

section::-webkit-scrollbar {
    width: 8px;
    height: 10px;
}

section::-webkit-scrollbar-track {
    background: transparent;
    border-radius: 4px;
}

section::-webkit-scrollbar-thumb {
    background: #5C6173;
    border-radius: 4px;
}

div {
    scrollbar-width: thin;
    scrollbar-color: #5C6173 transparent;
    scrollbar-track-color: transparent; /* 滚动条拖动区域的外观颜色透明 */
    -ms-scrollbar-track-color: transparent; /* IE下滚动条拖动区域的外观颜色透明 */
    -moz-scrollbar-track-color: transparent; /* IE下滚动条拖动区域的外观颜色透明 */
}

// - happy-scroll组件样式覆盖问题解
.happy-scroll {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;

    .happy-scroll-container {
        height: 100% !important;
        width: 100% !important;
    }

    .happy-scroll-content {
        width: 100% !important;
        height: 100% !important;
        border: none !important;
        vertical-align: top;
    }

    .happy-scroll-strip.happy-scroll-strip--vertical .happy-scroll-bar {
        width: 8px !important;
    }
}
